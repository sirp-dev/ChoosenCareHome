@page
@model ChoosenCareHome.Pages.ContactModel
@{
}
<section class="section position-relative" style="background-image: url(img/bg123.jpg);">
    <div class="r-container">
        <div class="image-overlay"></div>
        <div class="position-relative" style="z-index: 2;">
            <h1 class="font-1 fw-bold text-white">Contact Us</h1>
            <h4 style="color:white;">Caring with Compassion, Respect and Dignity</h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item fw-bold"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item fw-bold active" aria-current="page">Contact Us</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<section class="section">
    <div class="r-container">
        <div class="row row-cols-1 row-cols-lg-2">
            <div class="col mb-3">
                <div class="d-flex flex-column gap-3 h-100 justify-content-center">
                    <h6 class="font-2 accent-color">Contact</h6>
                    <h3 class="font-1 lh-1 fw-bold fs-1">Compassion Is At The Heart Of Our Care</h3>
                     
                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex flex-row gap-3 align-items-center">
                            <div class="bg-accent-color rounded-3 p-2 text-white" style="aspect-ratio: 1/1;">
                                <h4 class="lh-1 m-0 p-0 fw-bold font-1">
                                    <i class="fa-solid fa-map-location-dot"></i>
                                </h4>
                            </div>
                            <div class="d-flex flex-column">
                                <h6 class="font-1 fw-bold lh-1 m-0 text-gray">
                                    Visit Us
                                </h6>
                                <span class="fs-4 fw-bold font-1">38C The Wenta Enterprise Center, Cranbourne Road, Potters bar. Hertfordshire EN6 3DQ.</span>
                            </div>
                        </div>
                        <div class="d-flex flex-row gap-3 align-items-center">
                            <div class="bg-accent-color rounded-3 p-2 text-white" style="aspect-ratio: 1/1;">
                                <h4 class="lh-1 m-0 p-0 fw-bold font-1">
                                    <i class="fa-solid fa-envelope"></i>
                                </h4>
                            </div>
                            <div class="d-flex flex-column">
                                <h6 class="font-1 fw-bold lh-1 m-0 text-gray">
                                    Our Email
                                </h6>
                                <span class="fs-4 fw-bold font-1">
                                    info@chosenhealthcare.co.uk
                                </span>
                            </div>
                        </div>
                        <div class="d-flex flex-row gap-3 align-items-center">
                            <div class="bg-accent-color rounded-3 p-2 text-white" style="aspect-ratio: 1/1;">
                                <h4 class="lh-1 m-0 p-0 fw-bold font-1">
                                    <i class="fa-solid fa-phone"></i>
                                </h4>
                            </div>
                            <div class="d-flex flex-column">
                                <h6 class="font-1 fw-bold lh-1 m-0 text-gray">
                                    Our Number
                                </h6>
                                <span class="fs-4 fw-bold font-1">+447852528020</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col mb-3">
                <div class="bg-accent-color rounded-4">
                    <div class="h-100 d-flex flex-column p-5">
                        <h6 class="font-2 text-white">Fill The Form</h6>
                        <h3 class="font-1 lh-1 fw-bold fs-1 mb-3 text-white">Get In Touch</h3>
                     
                        <form action="" class="d-flex flex-column h-100 justify-content-center w-100 needs-validation mb-3 form" novalidate="">
                            <div class="mb-3">
                                <input type="text" class="form-control py-2 px-4" name="name" id="name" placeholder="Name" required="">
                                <div class="invalid-feedback">
                                    The field is required.
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="email" class="form-control py-2 px-4" name="email" id="email" placeholder="Email" required="">
                                <div class="invalid-feedback">
                                    The field is required.
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="text" class="form-control py-2 px-4" name="subject" id="subject" placeholder="Subject" required="">
                                <div class="invalid-feedback">
                                    The field is required.
                                </div>
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control py-2 px-4" id="message" name="message" rows="5" placeholder="Message"></textarea>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn submit_form py-3">
                                    Send Message
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>