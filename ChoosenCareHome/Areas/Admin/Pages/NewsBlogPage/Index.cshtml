@page
@model ChoosenCareHome.Areas.Admin.Pages.NewsBlogPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>NEWS UPDATE</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewsBlog[0].Title)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.NewsBlog[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsBlog[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NewsBlog) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <img src="@item.Image" height="100" />
             </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
