@page
@model ChoosenCareHome.Areas.Admin.Pages.QualificationPageList.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Qualification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Qualification.Id" />
            <div class="form-group">
                <label asp-for="Qualification.QualificationsItem" class="control-label"></label>
                <input asp-for="Qualification.QualificationsItem" class="form-control" />
                <span asp-validation-for="Qualification.QualificationsItem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qualification.SchoolCollege" class="control-label"></label>
                <input asp-for="Qualification.SchoolCollege" class="form-control" />
                <span asp-validation-for="Qualification.SchoolCollege" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qualification.GradeResult" class="control-label"></label>
                <input asp-for="Qualification.GradeResult" class="form-control" />
                <span asp-validation-for="Qualification.GradeResult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qualification.DatesFromTo" class="control-label"></label>
                <input asp-for="Qualification.DatesFromTo" class="form-control" />
                <span asp-validation-for="Qualification.DatesFromTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qualification.ApplicationId" class="control-label"></label>
                <select asp-for="Qualification.ApplicationId" class="form-control" asp-items="ViewBag.ApplicationId"></select>
                <span asp-validation-for="Qualification.ApplicationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
