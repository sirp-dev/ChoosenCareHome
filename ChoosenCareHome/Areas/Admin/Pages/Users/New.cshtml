@page
@model ChoosenCareHome.Areas.Admin.Pages.Users.NewModel
@{
}

 
<h4>Create a New Staff</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Application != null)
            {
                <input asp-for="AppId" value="@Model.Application.Id" hidden="hidden" />
                @*<div class="form-group">
                <label asp-for="AppId" class="control-label">Application to be Registered as Staff</label>
                <select asp-for="AppId" class="form-control" asp-items="ViewBag.ApplicationId">
                    <option value="">Choose</option>
                </select>
            </div>*@
                <div class="form-group">
                    <label asp-for="Input.FirstName" class="control-label"></label>
                    <input asp-for="Input.FirstName" value="@Model.Application.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.MiddleName" class="control-label"></label>
                    <input asp-for="Input.MiddleName" value="@Model.Application.MiddleName" class="form-control" />
                    <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Surname" class="control-label"></label>
                    <input asp-for="Input.Surname" value="@Model.Application.Surname" class="form-control" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber" class="control-label"></label>
                    <input asp-for="Input.PhoneNumber" value="@Model.Application.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="control-label"></label>
                    <input asp-for="Input.Email" value="@Model.Application.EMail" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Address" class="control-label"></label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.DOB" class="control-label"></label>
                    <input asp-for="Input.DOB" class="form-control" />
                    <span asp-validation-for="Input.DOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Role" class="control-label"></label>
                    <select asp-for="Input.Role" class="form-control">
                        <option value="CareGiver">CareGiver</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Input.FirstName" class="control-label"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.MiddleName" class="control-label"></label>
                    <input asp-for="Input.MiddleName" class="form-control" />
                    <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Surname" class="control-label"></label>
                    <input asp-for="Input.Surname" class="form-control" />
                    <span asp-validation-for="Input.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber" class="control-label"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="control-label"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Role" class="control-label"></label>
                    <select asp-for="Input.Role" class="form-control">
                        <option value="CareGiver">CareGiver</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
            }
            <h5>Note: The phone number is the password, which will be updated on first login</h5>
            <div class="form-group">
                <input type="submit" value="Create Account" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
